"use client";

import { PieChart, Pie, Cell, ResponsiveContainer } from "recharts";
const data = [
  { name: "Rent", value: 15000 },
  { name: "Groceries", value: 5500 },
  { name: "Others", value: 3000 },
];
const COLORS = ["#0ea5e9", "#f97316", "#a78bfa"];
export default function AnalyticsPanel() {
  return (
    <div className="bg-white border rounded p-4">
      <div className="font-semibold mb-3">Expense Analytics</div>
      <div style={{ height: 250 }}>
        <ResponsiveContainer width="100%" height="100%">
          <PieChart>
            <Pie dataKey="value" data={data} outerRadius={90} label>
              {data.map((entry, i) => (
                <Cell key={i} fill={COLORS[i % COLORS.length]} />
              ))}
            </Pie>
          </PieChart>
        </ResponsiveContainer>
      </div>
    </div>
  );
}
