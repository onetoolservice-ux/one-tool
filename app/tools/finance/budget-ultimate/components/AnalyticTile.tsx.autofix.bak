"use client";

import React from "react";
import { LineChart, Line, ResponsiveContainer } from "recharts";

type DataPoint = { amt: number }[];
type Props = {
  title: string;
  value: string | number;
  colorClass?: string;
  trendText?: string;
  data?: DataPoint;
  onClick?: () => void;
};

export default function AnalyticTile({ title, value, colorClass = "", trendText = "", data = [], onClick }: Props) {
  return (
    <div onClick={onClick} className="p-4 border rounded-lg bg-white hover:shadow-md transition cursor-pointer">
      <div className="text-xs text-slate-500">{title}</div>
      <div className={`text-2xl font-bold mt-1 ${colorClass}`}>{value}</div>

      <div className="h-10 mt-2">
        <ResponsiveContainer width="100%" height="100%">
          <LineChart data={data}>
            <Line type="monotone" dataKey="amt" stroke="currentColor" strokeWidth={2} dot={false} />
          </LineChart>
        </ResponsiveContainer>
      </div>

      <div className="text-xs text-slate-500 mt-1">{trendText}</div>
    </div>
  );
}
